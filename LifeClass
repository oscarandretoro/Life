    public void print()

    {
        int row, col;
        for (int x = 0; x < 20; x++)
        {
            for (int y = 0; y < 20; y++)
            {
                System.out.print(arrGrid[x][y] + " ");
            }//ends for
            System.out.println();
        }//ends for
    }

