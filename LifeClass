        {
            in = new Scanner(f);
        }//ends try block
        catch(IOException e)
        {
            System.out.println("Error: File not found");
        }//ends catch block

        while(in.hasNext())
        {
            xCord = in.nextInt() - 1;
            yCord = in.nextInt() - 1;
            arrGrid[xCord][yCord] = 1;
        }

    }//ends Life constructor

